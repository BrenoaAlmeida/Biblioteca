@model IEnumerable<Model.Editora>

@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<p>
    @Html.ActionLink("Nova Editora", "Criar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |            
            @Html.ActionLink("Excluir", "Deletar", new { id=item.Id })
        </td>
    </tr>
}            
</table>
@Html.ActionLink("Voltar para a pagina inicial", "Index", "Home")